{
  "author": "Ma≈Çgorzata Sienkiewicz",
  "name": "Close Tabs to the Right",
  "short_name": "Close Right Tabs",
  "version": "0.1",
  "description": "A simple Chrome extension that closes all tabs to the right of the active one. Lives pinned tabs.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "default_title": "Close Tabs to the Right"
  }
}
